<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/matchRow"
    android:layout_gravity="fill_horizontal"
    android:layout_height="wrap_content"
    android:horizontalSpacing="5dp"
    android:columnCount="5"
    android:rowCount="2"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="fill_parent"
    android:background="#B3000000"
    android:paddingTop="10dp"
    android:paddingBottom="5dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/matchRowFirstTeamFlag"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#333"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/flag1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/matchRowSecondTeamFlag"
        android:layout_row="0"
        android:layout_column="4"
        android:background="#333"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/flag2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/matchRowFirstTeamScore"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/matchRowSecondTeamScore"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:paddingRight="10dp" />


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_column="2"
        android:gravity="center"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2ยบ"
            android:id="@+id/matchRowMatchHalfTime"
            android:width="30dp"
            android:background="#1b1b1b"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/matchRowMatchTime"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="23:30"
            android:id="@+id/matchRowMatchTime"
            android:width="30dp"
            android:background="#000"
            android:layout_width="60dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12dp"
            android:gravity="center|center_horizontal"
            android:layout_alignTop="@+id/matchRowMatchHalfTime"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="First Team"
        android:id="@+id/matchRowFirstTeamName"
        android:layout_row="1"
        android:layout_column="0"
        android:typeface="serif"
        android:textStyle="bold|normal"
        android:textSize="10dp"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:padding="3dp"
        android:includeFontPadding="false"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Second Team"
        android:id="@+id/matchRowSecondTeamName"
        android:layout_row="1"
        android:layout_column="4"
        android:typeface="serif"
        android:textStyle="bold|normal"
        android:textSize="10dp"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:padding="3dp"
        android:includeFontPadding="false"
        android:gravity="center_horizontal" />

</GridLayout>
